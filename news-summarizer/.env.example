# Copy to .env and fill values before running.

# Required API keys
OPENAI_API_KEY=your_openai_key_here
COHERE_API_KEY=your_cohere_key_here
NEWS_API_KEY=your_newsapi_key_here

# Models
OPENAI_MODEL=gpt-4o-mini
COHERE_MODEL=command-a-03-2025

# Runtime controls
REQUEST_TIMEOUT=30
MAX_RETRIES=3
DAILY_BUDGET=5.00

# Rate limits (requests per minute)
OPENAI_RPM=500
COHERE_RPM=50
NEWS_API_RPM=100
GDELT_RPM=120

# Pipeline defaults
DEFAULT_CATEGORY=technology
DEFAULT_LIMIT=5
MAX_LIMIT=20
ASYNC_MAX_CONCURRENT=4
LLM_PRIMARY=openai

# Logging
LOG_JSON=1
DEBUG_LOG_ARTICLE_TEXT=0
